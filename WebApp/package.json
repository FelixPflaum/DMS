{
    "name": "dms-web",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently -n vite,api \"npm run client:dev\" \"npm run server:dev\"",
        "build": "npm run client:build && npm run server:build",
        "start": "node ./build/server/api.js",
        "client:build": "vite build --emptyOutDir",
        "client:dev": "vite",
        "server:build": "node esbuild.mjs",
        "server:build:watch": "node esbuild.mjs --watch",
        "server:dev": "concurrently -n build,serve \"rimraf ./build/server && npm run server:build:watch\" \"wait-on ./build/server/api.js && nodemon --inspect=8229 --legacy-watch --watch ./build/server ./build/server/api.js ./src/server\""
    },
    "author": "Felix Pflaum",
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "mysql2": "^3.11.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router": "^6.24.1",
        "react-router-dom": "^6.24.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/css-modules": "^1.0.5",
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.10",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "concurrently": "^8.2.2",
        "esbuild": "^0.23.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.3",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "5.5.3",
        "vite": "^5.3.3",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-pages": "^0.32.3",
        "wait-on": "^8.0.1"
    }
}
